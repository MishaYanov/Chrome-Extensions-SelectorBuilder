{
  "manifest_version": 3,
  "name": "AttributeCopier",
  "version": "1.01",
  "description": "Copying HTML tags with the wanted attribute",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "debugger",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
